<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.mcally.com.mcallycommon">
    <uses-permission android:name="android.permission.NFC" />
    <!-- 要求当前设备必须要有NFC芯片 -->
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".App"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".nfcactivity.MainNFCActivity">

        </activity>
        <activity android:name=".nfcactivity.RunAppActivity"
            android:launchMode="singleTop"
            android:label="@string/str_run_app"/>
        <activity android:name=".nfcactivity.RunUrlActivity"
            android:launchMode="singleTop"
            android:label="@string/str_run_url"/>
        <activity android:name=".nfcactivity.ReadTextActivity"
            android:launchMode="singleTop"
            android:label="@string/str_read_text"/>
        <activity android:name=".nfcactivity.WriteTextActivity"
            android:launchMode="singleTop"
            android:label="@string/str_write_text"/>
        <activity android:name=".nfcactivity.ReadUriActivity"
            android:launchMode="singleTop"
            android:label="@string/str_read_uri"/>
        <activity android:name=".nfcactivity.WriteUriActivity"
            android:launchMode="singleTop"
            android:label="@string/str_write_uri"/>
        <activity android:name=".nfcactivity.ReadMUActivity"
            android:launchMode="singleTop"
            android:label="@string/str_read_mu"/>
        <activity android:name=".nfcactivity.WriteMUActivity"
            android:launchMode="singleTop"
            android:label="@string/str_write_mu"/>
        <activity android:name=".MainActivity" />
        <activity android:name=".gifactivity.GifViewActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


    </application>

</manifest>